{
  "name": "webpack-typescript-starter",
  "version": "0.0.1",
  "description": "A simple Webpack 4 starter with TypeScript transpilation",
  "main": "index.js",
  "scripts": {
    "setup": "npm install",
    "start": "webpack-dev-server --config webpack.config.js --open",
    "build": "webpack --config webpack.config.js --mode production",
    "build:prod": "webpack --config webpack-prod.config.js -p",
    "test": "karma start karma.config.js",
    "test:prod": "karma start karma-prod.config.js",
    "typedoc": "typedoc --out docs --mode modules --tsconfig tsconfig.json src/",
    "ci": "npm run build:prod && npm run test:prod"
  },
  "keywords": [
    "webpack",
    "webpack4",
    "typescript",
    "jasmine",
    "sass",
    "jquery",
    "bootstrap",
    "karma"
  ],
  "author": "Rupesh Tiwari",
  "license": "ISC",
  "devDependencies": {
    "@types/jasmine": "2.8.7",
    "@types/jquery": "^3.3.29",
    "@types/node": "7.0.0",
    "@types/pubsub-js": "^1.5.18",
    "awesome-typescript-loader": "5.2.0",
    "base64-inline-loader": "1.1.1",
    "bootstrap": "4.2.1",
    "css-loader": "2.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jasmine-core": "3.3.0",
    "jasmine-dom-custom-matchers": "^1.0.5",
    "karma": "4.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-jasmine": "2.0.1",
    "karma-jasmine-html-reporter": "1.4.0",
    "karma-webpack": "3.0.5",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "sass-loader": "7.1.0",
    "shx": "^0.3.2",
    "source-map-loader": "0.2.4",
    "style-loader": "^0.23.1",
    "tslint": "5.10.0",
    "tslint-loader": "3.6.0",
    "typedoc": "^0.14.2",
    "typescript": "3.3.3",
    "url-loader": "1.1.2",
    "webpack": "^4.29.3",
    "webpack-cli": "3.2.3",
    "webpack-dev-server": "3.1.14"
  },
  "dependencies": {
    "jquery": "^3.3.1",
    "pubsub-js": "1.7.0",
    "uuid": "^3.3.2"
  }
}
